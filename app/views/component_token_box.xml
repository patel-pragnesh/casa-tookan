<Alloy>
		 
	<View class="tokenBox" id="tokenBox" postlayout="getBalance">
		<ImageView class="tokenImage" id="tokenImage" defaultImage="/images/image_blank.png" />
		<Label class="size18 tokenName" id="tokenName"></Label>
		<View>
		<View class="balances" id="balances" layout="vertical">
			<View class="tisize tokenBalances" layout="horizontal">
				<Label class="size18 tokenBalance" id="tokenBalance"></Label>
				<Label class="size10 tokenBalanceUnconfirmed" id="tokenBalanceUnconfirmed" visible="false"></Label>
			</View>
			<Label class="size12 tokenBalanceFiat" id="tokenBalanceFiat"></Label>
		</View>
		<ActivityIndicator id="activityIndicator" message=""/>
		</View>
		<View class="tisize infoButton" id="infoButton">
			<ImageView class="tokenInfoIcon" image="/images/icon_info.png" />
		</View>
		<View class="tisize sendButton" id="sendButton" layout="horizontal">
			<ImageView class="tokenSendIcon" image="/images/icon_send.png" />
			<Label class="size15 tokenSendLabel">L("label_send")</Label>
		</View>
		 
	</View>
	
	 
</Alloy>